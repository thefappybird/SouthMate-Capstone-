<!-- signin modal -->
<div class="modal--signin hide modal flex">
    <div class="signin--modal-content">
        <a href="/" class="close fa-solid fa-circle-xmark"></a>
        <div class="signin-form flex">
            <img src="assets/App-Assets/Carousel--Logo.svg" alt="registration logo" class="signin-logo">
            <form action="/" id="signin-form" class="signin-form" method="post">
                <label for="email" class="signin-content">Enter your Email Address</label>
                <input placeholder="Your Email Address here" type="email" name="email" id="email"class="inputText">
                <label for="password" class="signin-content">Enter your password</label>
                <input placeholder="Your password here" type="password" name="password" id="password"class="inputText">
            </form>
        </div>
        <div class="signin-form signin-form--bottom">
            <button type="submit" form="signin-form" class="signin--btn">Login</button>
        </div>
    </div>
</div>
